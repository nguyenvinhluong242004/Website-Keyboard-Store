    <script>
        $(document).ready(function () {
            // Save the state of the navigation bar to local storage
            function saveNavState() {
                const navState = {};
                $('.dropdown .collapse').each(function () {
                    const id = $(this).attr('id');
                    navState[id] = $(this).hasClass('show');
                });
                localStorage.setItem('navState', JSON.stringify(navState));
            }

            // Load the state of the navigation bar from local storage
            function loadNavState() {
                const navState = JSON.parse(localStorage.getItem('navState'));
                if (navState) {
                    for (const id in navState) {
                        if (navState[id] ) {
                            $('#' + id).addClass('show');
                        }
                    }
                }
            }

            // Save the state when a dropdown is toggled
            $('.dropdown .collapse').on('shown.bs.collapse hidden.bs.collapse', function () {
                saveNavState();
            });

            // Load the state on page load
            loadNavState();

            // Lưu trạng thái của sidebar vào localStorage
            function saveSidebarState() {
                if ($('.sidebar').hasClass('hidden')) {
                    localStorage.setItem('sidebarState', 'hidden');
                } else {
                    localStorage.setItem('sidebarState', 'visible');
                }
            }

            // Khi sidebar bị ẩn, main chiếm toàn bộ chiều rộng
            $('#toggleSidebarBtn').on('click', function () {
                $('.sidebar').toggleClass('hidden');
                $('main').toggleClass('main-expanded');  // Thêm lớp main-expanded
                saveSidebarState();  // Lưu trạng thái mới
            });

            // Tải trạng thái sidebar từ localStorage
            function loadSidebarState() {
                const sidebarState = localStorage.getItem('sidebarState');
                if (sidebarState === 'hidden') {
                    $('.sidebar').addClass('hidden');
                    $('main').addClass('main-expanded'); // Khi ẩn, main sẽ chiếm toàn bộ chiều rộng
                } else {
                    $('.sidebar').removeClass('hidden');
                    $('main').removeClass('main-expanded');
                }
            }

            loadSidebarState();  // Tải trạng thái khi trang được tải lại

        });
    </script>
