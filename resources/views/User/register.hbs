<!-- register.hbs -->
<ul class="breadcrumb" style="margin: 7px; margin-left: 100px;">
    <li>
        <a href="/" style="text-decoration: none; color: blue;"><span>Trang chủ</span></a>
        <span class="mr_lr">&nbsp;/&nbsp;</span>
    </li>
    <li><strong><span>Đăng ký tài khoản</span></strong></li>
</ul>
<div id="login-control" class="login-control">
    <div class="card-header text-center">Tạo tài khoản</div>
    <div class="card-body">
        <form id="register-form" @submit.prevent="signup">
            <p class="text-center">Nhập email và mật khẩu của bạn</p>
            <div class="form-group">
                <label for="signupEmail">Email</label>
                <input type="email" class="form-control" id="signupEmail" v-model="signupEmail" placeholder="Email"
                    required>
            </div>
            <div class="form-group position-relative">
                <label for="signupPassword">Mật Khẩu</label>
                <input :type="isHiddenPassword ? 'password' : 'text'" class="form-control" id="signupPassword"
                    v-model="signupPassword" placeholder="Mật Khẩu" required>
                <i @click.prevent="setHiddenPassword" v-if="!isHiddenPassword"
                    class="bi bi-eye-fill position-absolute eye-icon"></i>
                <i @click.prevent="setHiddenPassword" v-else=""
                    class="bi bi-eye-slash-fill position-absolute eye-icon"></i>
            </div>
            <div class="form-group position-relative">
                <label for="confirmPassword">Nhập lại mật khẩu</label>
                <input :type="isHiddenPassword ? 'password' : 'text'" class="form-control" id="confirmPassword"
                    v-model="confirmPassword" placeholder="Nhập lại mật khẩu" required>
                <i @click.prevent="setHiddenPassword" v-if="!isHiddenPassword"
                    class="bi bi-eye-fill position-absolute eye-icon"></i>
                <i @click.prevent="setHiddenPassword" v-else=""
                    class="bi bi-eye-slash-fill position-absolute eye-icon"></i>
            </div>
            <button type="submit" class="btn btn-custom mt-4">Đăng ký</button>
            <p class="text-center mt-3">Đăng ký bằng:</p>
            <div class="text-center social-icons">
                <img @click.prevent="goLoginFromGG"
                    src="https://img.icons8.com/?size=100&id=17949&format=png&color=000000" alt="Google">
            </div>
        </form>
    </div>
    <div class="card-footer text-center text-muted">
        This site is protected by reCAPTCHA and the Google <a href="#">Privacy Policy</a> and <a href="#">Terms
            of Service</a> apply.
    </div>
    <div class="text-center mt-3">
        <a href="#" @click.prevent="goToLogin" id="login">Đã có tài khoản? Đăng nhập</a>
    </div>
</div>